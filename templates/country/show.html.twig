{% extends 'base.html.twig' %}

{% block title %}Country{% endblock %}

{% block page_title %}
    <div class="col-10" >
        <h2 class="text-dark" >Country</h2 >
    </div >
    <div class="col-2 text-right" >
        <a href="{{ path('country_index') }}" class="btn btn-secondary d-inline-block align-middle" >Back to list</a >
    </div >
{% endblock %}

{% block body %}

    <table class="table" >
        <tbody >
        <tr >
            <th >Id</th >
            <td >{{ country.id }}</td >
        </tr >
        <tr >
            <th >Code</th >
            <td >{{ country.code }}</td >
        </tr >
        <tr >
            <th >Name</th >
            <td >{{ country.name }}</td >
        </tr >
        <tr >
            <th >DateInsert</th >
            <td >{{ country.dateInsert ? country.dateInsert|date('Y-m-d H:i:s') : '' }}</td >
        </tr >
        </tbody >
    </table >

    <div class="row" >
        <div class="col-10" >
            <a href="{{ path('country_edit', {'id': country.id}) }}"
               class="btn btn-secondary d-inline-block align-middle" >Edit</a >
        </div >
        <div class="col-2 text-right" >
            {{ include('country/_delete_form.html.twig') }}
        </div >
    </div >

{% endblock %}
