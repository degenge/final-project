{% extends 'base.html.twig' %}

{% block title %}Visit{% endblock %}

{% block page_title %}
    <div class="col-10" >
        <h2 class="text-dark" >Visit</h2 >
    </div >
    <div class="col-2 text-right" >
        <a href="{{ path('visit_index') }}" class="btn btn-secondary d-inline-block align-middle" >Back to list</a >
    </div >
{% endblock %}

{% block body %}

    <table class="table" >
        <tbody >
        <tr >
            <th >Id</th >
            <td >{{ visit.id }}</td >
        </tr >
        <tr >
            <th >Title</th >
            <td >{{ visit.title }}</td >
        </tr >
        <tr >
            <th >Description</th >
            <td >{{ visit.description }}</td >
        </tr >
        <tr >
            <th >DateVisitedFrom</th >
            <td >{{ visit.dateVisitedFrom ? visit.dateVisitedFrom|date('Y-m-d') : '' }}</td >
        </tr >
        <tr >
            <th >DateVisitedTill</th >
            <td >{{ visit.dateVisitedTill ? visit.dateVisitedTill|date('Y-m-d') : '' }}</td >
        </tr >
        <tr >
            <th >DateInserted</th >
            <td >{{ visit.dateInserted ? visit.dateInserted|date('Y-m-d H:i:s') : '' }}</td >
        </tr >
        </tbody >
    </table >

    <div class="row" >
        <div class="col-10" >
            <a href="{{ path('visit_edit', {'id': visit.id}) }} "
               class="btn btn-secondary d-inline-block align-middle" >Edit</a >
        </div >
        <div class="col-2 text-right" >
            {{ include('visit/_delete_form.html.twig') }}
        </div >
    </div >

{% endblock %}
