{% extends 'base.html.twig' %}

{% block title %}Visit{% endblock %}

{% block body %}
    <h1>Visit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ visit.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ visit.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ visit.description }}</td>
            </tr>
            <tr>
                <th>DateVisitedFrom</th>
                <td>{{ visit.dateVisitedFrom ? visit.dateVisitedFrom|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateVisitedTill</th>
                <td>{{ visit.dateVisitedTill ? visit.dateVisitedTill|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateInserted</th>
                <td>{{ visit.dateInserted ? visit.dateInserted|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('visit_index') }}">back to list</a>

    <a href="{{ path('visit_edit', {'id': visit.id}) }}">edit</a>

    {{ include('visit/_delete_form.html.twig') }}
{% endblock %}
