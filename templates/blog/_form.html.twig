{{ form_start(form) }}

<div class="form-row" >

    <div class="form-group col-4" >
        {{ form_label(form.visit) }}
        {{ form_widget(form.visit, {'attr': {'class': 'form-control'}}) }}
    </div >

    <div class="form-group col-4" >
        {{ form_label(form.title) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
    </div >

    <div class="form-group col-4" >
        {{ form_label(form.dateBlogged) }}
        {{ form_widget(form.dateBlogged, {'attr': {'class': 'form-control js-datepicker', 'placeholder': 'yyyy-mm-dd'}}) }}
    </div >

</div >

<div class="form-row" >

    <div class="form-group col-12" >
        {{ form_label(form.description) }}
        {{ form_widget(form.description, {'attr': {'class': 'form-control' }}) }}
    </div >

</div >

<div class="form-row" >

    <div class="form-group col-12" >
        <button class="btn btn btn-secondary" >{{ button_label|default('Save') }}</button >
    </div >

</div >

{{ form_end(form) }}
