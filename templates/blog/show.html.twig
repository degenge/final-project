{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block page_title %}
    <div class="col-10" >
        <h2 class="text-dark" >Blog</h2 >
    </div >
    <div class="col-2 text-right" >
        <a href="{{ path('blog_index') }}" class="btn btn-secondary d-inline-block align-middle" >Back to list</a >
    </div >
{% endblock %}

{% block body %}

    <table class="table" >
        <tbody >
        <tr >
            <th >Id</th >
            <td >{{ blog.id }}</td >
        </tr >
        <tr >
            <th >Title</th >
            <td >{{ blog.title }}</td >
        </tr >
        <tr >
            <th >Description</th >
            <td >{{ blog.description }}</td >
        </tr >
        <tr >
            <th >DateBlogged</th >
            <td >{{ blog.dateBlogged ? blog.dateBlogged|date('Y-m-d H:i:s') : '' }}</td >
        </tr >
        <tr >
            <th >DateInsert</th >
            <td >{{ blog.dateInsert ? blog.dateInsert|date('Y-m-d H:i:s') : '' }}</td >
        </tr >
        </tbody >
    </table >

    <div class="row" >
        <div class="col-10" >
            <a href="{{ path('blog_edit', {'id': blog.id}) }}"
               class="btn btn-secondary d-inline-block align-middle" >Edit</a >
        </div >
        <div class="col-2 text-right" >
            {{ include('blog/_delete_form.html.twig') }}
        </div >
    </div >

{% endblock %}
