{% extends 'base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block page_title %}
    <div class="col-10" >
        <h2 class="text-dark" >Blog</h2 >
    </div >
    <div class="col-2 text-right" >
        <a href="{{ path('blog_new') }}" class="btn btn-secondary d-inline-block align-middle" >Create new</a >
    </div >
{% endblock %}

{% block body %}

    <table class="table table-striped table-sm" >
        <thead class="thead-dark" >
        <tr >
            <th ></th >
            <th >Id</th >
            <th >Visit</th >
            <th >Title</th >
            <th >Description</th >
            <th >DateBlogged</th >
            <th ></th >
        </tr >
        </thead >
        <tbody >
        {% for blog in blogs %}
            <tr >
                <td >
                    <a href="{{ path('blog_show', {'id': blog.id}) }}" >
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                             class="fill-current text-blue-600" >
                            <path fill="#0069d9"
                                  d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" />
                        </svg >
                    </a >
                </td >
                <td >{{ blog.id }}</td >
                <td >{{ blog.visit.title }}</td >
                <td >{{ blog.title }}</td >
                <td >{{ blog.description }}</td >
                <td >{{ blog.dateBlogged ? blog.dateBlogged|date('Y-m-d H:i:s') : '' }}</td >
                <td >
                    <a href="{{ path('blog_edit', {'id': blog.id}) }}" >
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" >
                            <path fill="#218838"
                                  d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.39-.39-1.02-.39-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" />
                        </svg >
                    </a >
                </td >
            </tr >
        {% else %}
            <tr >
                <td colspan="7" >No records found</td >
            </tr >
        {% endfor %}
        </tbody >
    </table >

{% endblock %}
